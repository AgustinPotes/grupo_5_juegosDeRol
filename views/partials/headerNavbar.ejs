<nav class="main-navbar">
    <a href="/"><img src="/img/logoSinNombre.png" class="logo"></a>
    <div class="burger-menu">
    <a href="javascript:void(0);" onclick="myFunction()" class="icon-burger">
      <i class="fa fa-bars"></i>
    </a>
    <ul class="left-navbar" id="myLinks">
        <li class="category"><a href="#">Juegos de rol</a></li>
        <li class="category"><a href="#">Juegos de cartas</a></li>
        <li class="category"><a href="#">Miniaturas y accesorios</a></li>
        <li class="category burger"><a href="/users/login">Ingresa</a></li>
        <li class="category burger"><a href="/products/cart">Carrito</a></li>
    </ul>

    <ul class="right-navbar" id="myLinks">
      <input type="search" placeholder=" Buscar nuevas aventuras..." class="search-bar" >
      <i class="fas fa-search"></i>
      <%  if (locals.isLogged) { %>
        <li>
          <a href="/users/profile" type="button" data-bs-toggle="dropdown" aria-expanded="false">
            <img src="/img/avatars/<%= locals.userLogged.avatar %>"> 
            Bienvenido <%= locals.userLogged.userAlias %>
          </a>
          <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
              <a href="dropdown-divider"></a>
              <li><hr class="dropdown-item"></li>
              <a class="dropdown-item"  href="/user/logout"></a>
          </ul>
        </li>
          
      <% } else { %>
          <li class="login"><a href="/users/login"><button type="button" class="login-cart-button"><i class="fas fa-user-circle"></i></button></a></li>
          <li class="register"><a class="" href="/users/register">Registrarse</a></li>
      <% } %>
        <li class="register"><a class="" href="/products">Productos</a></li>
        <li class="cart"><a href="/products/cart"><button type="button" class="login-cart-button"><i class="fas fa-shopping-cart"></i></button></a></li>
    </ul>
</div>
    <script>
        function myFunction() {
          let x = document.getElementById("myLinks");
          if (x.style.display === "block") {
            x.style.display = "none";
          } else {
            x.style.display = "block";
          }
        }
        </script>
    </nav>
