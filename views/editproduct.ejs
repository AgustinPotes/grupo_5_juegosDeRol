<body>
     <!-- Navbar -->
    <%- include('./partials/headerNavbar') %>

    <header>

    <div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Estás editando el producto: <i><%=product.title%></i></h2>
			</div>
		</div>
		<div class="col-12">
			<form action="/products/editProduct/<%=product.id%>?_method=PUT" method="POST" enctype="multipart/form-data">
				<div class="row product-detail">

					<div class="col-12 col-md-6">
						<label for="title" class="form-label">Nombre del producto:</label>
						<input type="text" id="name" name="title" value="<%=product.title%>" class="form-input">
					</div>
					<div class="col-12 col-md-6">
						<label for="price" class="form-label">Precio del producto:</label>
						<input type="number" id="price" name="price" value="<%=product.price%>" class="form-input">
					</div>
					<!--<div class="col-12 col-md-6">
						<label for="discount" class="form-label">Descuento:</label>
						<input type="number" id="discount" name="discountPercentage" value="<%=product.discountPercentage%>" class="form-input">
					</div>
					<div class="col-12 col-md-6">
						<label for="category" name="category" class="form-label">Categoría:</label>
						<div>Actual:
							<%=product.category%>

						</div>
						<select name="category" id="category" class="form-input">
							<option disabled selected>Actual: <%=product.category%></option>
							<option value="rolBoardGame">Juegos de rol de mesa</option>
                            <option value="accesories">Miniaturas y accesorios</option>
                            <option value="cardGame">Juegos de cartas</option>
						</select>
					</div>-->
					<div class="col-12">
						<label for="descrip" class="form-label">Descripción:</label>
						<textarea name="descrip" id="descrip" class="form-input" value="<%=product.descrip%>"></textarea>
					</div>
					<div class="divAddImages">
						<label>Imágen/es:</label>
						<input name="image" type="file" multiple="multiple" class="inp" accept= ".jpg, .jpeg">
					</div>
					<div class="col-12">
						<button type="submit" name="submit" class="buy-now-button">Guardar cambios</button>
					</div>
				</div>
			</form>
			<div class="prueba_delete_button">
			<form action="/products/editProduct/<%=product.id%>?_method=DELETE" method="POST" enctype="multipart/form-data">
						<button id="eraseProduct" type="submit" name="avaible" class="buy-now-button">Borrar producto</button>
						<script type="text/javascript">
							document.getElementById("eraseProduct").onclick= function() {
								alert("¿Está seguro de que quiere borrar el producto?");
								return product.avaible = false;
							}
						</script>
			</form>
		</div>
		</div>

	</div>

    </header>
   

    <!-- Footer -->
    <%- include('./partials/footer') %>

