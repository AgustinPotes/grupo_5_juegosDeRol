    <header>
        <h3>Listado de Productos</h3>
    </header>
    <section class="products">
    <section class="main-product">
    <div class="main-container">
        <% for (let i = 0; i < products.length; i++){%>  
        <article class="display-product">
                <img src="/img/<%=products[i].img%>" alt="">

                <div class="main-article">
                <hr>    
                <h4 class="product-name"><%=products[i].title%></h4>
                <p class="product-price">$<%=products[i].price%></p>
                <hr>

                <div class="quantity-and-cart-block">
                <div class="product-quantity-class">
                <label for="product-quantity">Elige la cantidad:</label>
                <input list="product-quantity1" placeholder="0" id="product-quantity">
                <datalist id="product-quantity1">
                        <option value="0">
                        <option value="1">
                        <option value="2">
                        <option value="3">
                        <option value="4">
                        <option value="5">
                </datalist>
                <input class="add-to-cart-buttom" type="submit" value="Agregar al Carrito">
                <form method= "POST" action="/products/delete/<%=products[i].id%>?_method=DELETE">
                    <button>Eliminar</button>
                </form>
                </div>
                </div>
                


                </div>

               
        </article>
        <%}%>
        </div>
    </section>
    <section class="">
        <% for (let i = 0; i < products.length; i++){%>
                <div class="description">
                 <h1>Descripcion</h1>
                 <br></br>
                 <h2><%=products[i].shortDescription%></h2>
                 <br></br>
                 <ol>
                    <p>Nombre: <%=products[i].title%></p>
                    <p>Fabricante: <%=products[i].publisher%></p>
                    <p>Edad:<%=products[i].age%></p>
                    <p>Jugadores: <%=products[i].players%></p>
                    <p>Tiempo de Juego: <%=products[i].playtime%></p>
                    <p>Dimensiones:<%=products[i].dimentions%></p>
                    <p>Material: <%=products[i].construction%></p>
                    </ol>
                 </div>
    </section>
    <%}%>

